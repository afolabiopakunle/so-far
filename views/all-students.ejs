<%- include ("partials/header.ejs") %>

<div class="container">
  <h3>SEE ALL OUR STUDENTS</h3>
  <a href="/add-student">Add Student</a>
  <div class="card-deck">
    <div class="row">
      <% students.forEach(student => { %>
      <div class="col-md-4">
        <div class="card">
          <img
            class="card-img-top"
            src="<%= student.imageURL %>"
            alt="<%= student.name %>"
          />
          <div class="card-body">
            <h5 class="card-title">
              <%= student.name %> <%= student.surname %>
            </h5>
            <p class="card-text">
              <%= student.summary %>
            </p>
            <p class="card-text">
              <small class="text-muted">Last updated 3 mins ago</small>
            </p>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
  <%- include ("partials/footer.ejs") %>
</div>
